<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewMainMenuSemua"
    android:padding="16dp"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    style="@style/CardView"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">


        <ImageView
            android:id="@+id/thumbnailWisataProfile"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/titleWisataProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignLeft="@id/thumbnailWisataProfile"
            android:layout_alignRight="@id/thumbnailWisataProfile"
            android:layout_alignBottom="@id/thumbnailWisataProfile"
            android:textColor="@color/white"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>